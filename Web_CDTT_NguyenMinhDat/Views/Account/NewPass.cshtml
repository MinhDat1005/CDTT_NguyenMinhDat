@model AppUserModel
@{
    ViewData["Title"] = "Reset Password";
}
<form class="register-form" asp-action="UpdateNewPassword" asp-controller="Account">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" value="@ViewBag.Token" name="token" />
    <div class="register-flex-column">
        <label>Email</label>
    </div>
    <div class="register-inputForm">
        <input asp-for="Email" value="@ViewBag.Email" class="register-input" placeholder="Enter your Email" />
        <span asp-validation-for="Email" class="text-danger" />
    </div>

    <div class="register-flex-column">
        <label>New Password</label>
    </div>
    <div class="register-inputForm">
        <input asp-for="PasswordHash" class="register-input" placeholder="Enter your New Password" />
        <span asp-validation-for="PasswordHash" class="text-danger" />
    </div>

    <button class="register-button-submit">Update Password</button>
</form>

