@{
    var currentUrl = Url.ActionContext.HttpContext.Request.Path;
}

<style>
   
    #slider-range {
        margin: 20px 0;
    }
    .ui-slider-handle {
        width: 20px; 
        height: 20px; 
        border-radius: 50%; 
        background: #f6931f; 
        border: 2px solid #fff; 
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.5); 
    }
    .btn-locgia {
        margin-top: 15px; 
    }
</style>

<div class="aside">
    <h3 class="aside-title">Price</h3>
    <div class="price-filter">
        <form asp-action="Index" asp-controller="Product">
            <p>
                <input type="text" id="amount" readonly="" style="border:0; color:#f6931f; font-weight:bold;">
            </p>

            <div id="slider-range"></div>
            <button name="locgia" data-current_url="@currentUrl" class="btn btn-primary btn-locgia m" type="submit">Lọc giá</button>
        </form>
    </div>
</div>
