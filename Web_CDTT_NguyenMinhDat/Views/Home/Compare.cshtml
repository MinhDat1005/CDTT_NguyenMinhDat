@{
    ViewData["Title"] = "So Sánh Sản Phẩm"; // Updated title for clarity
    int key = 0;
}
<h3 class="text-center">Danh Sách So Sánh Sản Phẩm</h3>
<div class="mb-3">
    <table class="table table-bordered" id="compareTable">
        <thead>
            <tr class="table-warning">
                <th>#</th>
                <th>Tên Sản Phẩm</th>
                <th>Mô Tả Sản Phẩm</th>
                <th>Giá Sản Phẩm</th>
                <th>Hình Ảnh</th>
                <th>Hành Động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var compareProduct in Model)
            {
                key++;
                <tr>
                    <th scope="row">@key</th>
                    <td>@compareProduct.Product.Name</td>
                    <td>@compareProduct.Product.Description</td>
                    <td>@compareProduct.Product.Price.ToString("#,##0 VNĐ")</td>
                    <td>
                        <img src="~/images/@compareProduct.Product.Image" width="120" height="120" alt="Product Image" />
                    </td>
                    <td>
                        <a class="btn btn-danger btn-sm confirmDeletion"
                           asp-action="DeleteCompare"
                           asp-controller="Home"
                           asp-route-Id="@compareProduct.Id">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
