@{
    ViewData["Title"] = "Index";
    var key = 0;
}
<h3 class="text text-center">Sản phẩm yêu thích</h3>
<div class="mb-3">
    <table class="table table-bordered" id="myTable">
        <thead>
            <tr class="table-warning">
                <th>#</th>
                <th>Product Name</th>
                <th>Product Description</th>
                <th>Product Price</th>
                <th>Product Image</th>
                <th>Hành Động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var wish_product in Model)
            {
                key++;
                <tr>
                    <th scope="row">@key</th>
                    <td>@wish_product.Product.Name</td>
                    <td>@wish_product.Product.Description</td>
                    <td>@wish_product.Product.Price.ToString("#,##0 VNĐ")</td>
                    <td><img src="~/images/@wish_product.Product.Image" width="120" height="120" /></td>
                    <td>
                        <a class="btn btn-danger btn-sm confirmDeletion" asp-action="DeleteWish" asp-controller="Home" asp-route-Id="@wish_product.Id">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
