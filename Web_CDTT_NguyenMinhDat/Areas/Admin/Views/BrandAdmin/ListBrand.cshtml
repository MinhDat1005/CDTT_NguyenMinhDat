@using Web_CDTT_NguyenMinhDat.Models
@model IEnumerable<BrandModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<h3>List Brands</h3>
<a asp-action="Add" asp-controller="BrandAdmin" class="btn btn-info p-3 mb-3">Add Category</a>
<table class="table table-bordered" id="myTable">
    <thead>
        <tr class="table-warning">
            <th scope="col">ID</th>
            <th scope="col">Brand Name</th>
            <th scope="col">Brand Description</th>
            <th scope="col">Brand Slug</th>
            <th scope="col">Brand Status</th>
            <th scope="col">Action</th>



        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Slug</td>
                <td>
                    @if (item.Status == 1)
                    {
                        <span class="text text-success">Hiển thị</span>
                    }
                    else
                    {
                        <span class="text text-danger">Ẩn</span>

                    }
                </td>

                <td>
                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-controller="BrandAdmin" asp-route-Id="@item.Id">Edit</a>|
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="BrandAdmin" asp-route-Id="@item.Id">Delete</a>

                </td>

            </tr>
        }


    </tbody>
</table>