@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<h3>List Roles</h3>
<a asp-action="Add" asp-controller="RoleAdmin" class="btn btn-info p-3 mb-3">Add Role</a>
<table class="table table-bordered" id="myTable">
    <thead>
        <tr class="table-warning">
            <th scope="col">ID</th>
            <th scope="col">Role Name</th>
          
          
            <th scope="col">Action</th>



        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-controller="RoleAdmin" asp-route-Id="@item.Id">Edit</a>|
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="RoleAdmin" asp-route-Id="@item.Id">Delete</a>

                </td>

            </tr>
        }


    </tbody>
</table>