@using Web_CDTT_NguyenMinhDat.Models
@model ContactModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Edit Contact";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<h4>Edit Contact</h4>
<div class="col-md-9">
    <form asp-action="Edit" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
     

        <div class="form-group">
            <label>Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Email</label>
            <textarea asp-for="Email" class="form-control"></textarea>
            <span asp-validation-for="Email" class="text-danger" />
        </div>
       
        <div class="form-group">
            <label>Description</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger" />
        </div>

        <div class="form-group">
            <label>Map</label>
            <textarea asp-for="Map" class="form-control"></textarea>
            <span asp-validation-for="Map" class="text-danger" />
        </div>

        <div class="form-group">
            <label>Phone</label>
            <textarea asp-for="Phone" class="form-control"></textarea>
            <span asp-validation-for="Phone" class="text-danger" />
        </div>
        
       
        <div class="form-group">
            <label>Logo</label>
            <input asp-for="ImageUpLoad" class="form-control" />
            <span asp-validation-for="ImageUpLoad" class="text-danger" />
            <img src="~/images/@Model.LogoImage" width="120" height="120" /></td>
        </div>
        <div class="form-group">
            <button class="btn btn-primary">Update</button>
        </div>
    </form>
    <a asp-action="ListContact" class="btn btn-dark">Back To List</a>
</div>
