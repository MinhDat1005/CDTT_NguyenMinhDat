    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var message = '@TempData["Message"]';
            if (message) {
                Swal.fire({
                    icon: 'success',
                    title: '<span style="font-family: Open Sans, sans-serif;">Thông báo</span>',
                    html: `<span style="font-family: 'Open Sans', sans-serif;">${message}</span>`,
                    confirmButtonText: 'OK',
