@using Web_CDTT_NguyenMinhDat.Models
@model IEnumerable<ProductModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<h3>List Products</h3>
<a asp-action="Add" asp-controller="ProductAdmin" class="btn btn-info p-3 mb-3" >Add Products</a>
<div class="mb-3">
    <!-- Add a margin-bottom to the div -->
    <table class="table table-bordered" id="myTable">
        <thead>
            <tr class="table-warning">
                <th >#</th>
                <th >Product Name</th>
                <th>Product Quantity</th>
                <th>Product Sold</th>
                <th >Product Description</th>
                <th >Product Price</th>
                <th >Product Image</th>
                <th >Product Category</th>
                <th >Product Brand</th>
                <th >Hành Động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td><b >@item.Quantity</b><br /> <a asp-action="AddQuantity" asp-controller="ProductAdmin" asp-route-Id="@item.Id">Add Quantity</a></td>
                    <td><b>@item.Sold</b></td>
                    <td>@item.Description</td>
                    <td>@item.Price.ToString("#,##0 VNĐ")</td>
                    <td><img src="~/images/@item.Image" width="120" height="120" /></td>
                    <td>@item.Category.Name</td>
                    <td>@item.Brand.Name</td>
                    <td>
                        <a class="btn btn-primary btn-sm" asp-action="Edit" asp-controller="ProductAdmin" asp-route-Id="@item.Id">Edit</a>|  
                        <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="ProductAdmin" asp-route-Id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
