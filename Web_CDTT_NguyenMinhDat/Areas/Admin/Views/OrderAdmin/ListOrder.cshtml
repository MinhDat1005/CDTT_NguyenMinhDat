@using Web_CDTT_NguyenMinhDat.Models
@model IEnumerable<OrderModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<h3>List Order</h3>
<table class="table table-bordered" id="myTable">
    <thead>
        <tr class="table-warning">
            <th scope="col">#</th>
            <th scope="col">Order Code</th>
            <th scope="col">Order Name</th>
            <th scope="col">Order Date</th>
            <th scope="col">ShippingCod</th>
            <th scope="col">CouponCode</th>
            <th scope="col">Order Status</th>
           
            <th scope="col">Hành Động</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>#</th>
                <th scope="row">@item.OrderCode</th>
                <td>@item.UserName</td>
                <td>@item.CreatedDate</td>
                <td>@item.ShippingCOD.ToString("#,##0 VNĐ")</td>
                <td>@item.CouponCode</td>

                <td>
                    @if (item.Status == 1)
                    {
                        <span class="text text-danger">Chờ xác nhận</span>
                    }
                    else
                    {
                        <span class="text text-success">Đã xác nhận</span>

                    }
                </td>
              

                <td>
                    <a class="btn btn-warning btn-sm" asp-action="ViewOrder" asp-controller="OrderAdmin" asp-route-ordercode="@item.OrderCode">ViewOrder</a>
@*                     <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="OrderAdmin" asp-route-ordercode="@item.OrderCode">Delete</a>
 *@                </td>

            </tr>
        }


    </tbody>
</table>