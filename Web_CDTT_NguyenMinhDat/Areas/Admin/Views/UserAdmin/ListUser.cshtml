
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<h3>List Users</h3>
<a asp-action="Add" asp-controller="UserAdmin" class="btn btn-info p-3 mb-3">Add User</a>
<table class="table table-bordered" id="myTable">
    <thead>
        <tr class="table-warning">
            <th scope="col">#</th>
            <th scope="col">User Name</th>
            <th scope="col">User Email</th>
            <th scope="col">User Phone</th>
            <th scope="col">User Role</th>
            <th scope="col">Action</th>



        </tr>
    </thead>
    <tbody>
        @foreach (var usersWithRoles in Model)
        {
            <tr>
                <th scope="row">@usersWithRoles.User.Id</th>
                <td>@usersWithRoles.User.UserName</td>
                <td>@usersWithRoles.User.Email</td>
                <td>@usersWithRoles.User.PhoneNumber</td>
                <td>@usersWithRoles.RoleName</td>

                <td>
                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-controller="UserAdmin" asp-route-Id="@usersWithRoles.User.Id">Edit</a> |
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="UserAdmin" asp-route-Id="@usersWithRoles.User.Id">Delete</a>
                </td>
            </tr>
        }



    </tbody>
</table>